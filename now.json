{
  "name": "pkg",
  "version": 2,
  "alias": "pkg.nyc",
  "builds": [
    {"src": "api/pkg.ts", "use": "@now/node@canary"},
    {
      "src": "api/login.ts",
      "use": "@now/node@canary",
      "config": {"maxLambdaSize": "40mb"}
    },
    {"src": "package.json", "use": "@now/static-build"}
  ],
  "routes": [
    {"src": "^/api/(.*)", "dest": "/api/$1.ts"},
    {"src": "^/(.*)", "dest": "/$1"}
  ]
}
